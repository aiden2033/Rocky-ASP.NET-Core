@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Rocky.Models.ApplicationType>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Index</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                ApplicationType List
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">Create New ApplicationType</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td width="50%">@v.Name</td>
                        <th>
                            <form method="post" action="~/ApplicationType/Delete">                                
                                <input type="hidden" value=@v.Id name="Id"/>
                                <input type="hidden" value=@v.Name name="Name"/>
                                <input type="submit" value="Delete"  />
                            </form>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There is no Application's</p>

    }
</div>

