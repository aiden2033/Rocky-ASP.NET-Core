@model IEnumerable<Rocky.Models.ApplicationType>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Index</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                ApplicationType List
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New ApplicationType
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr>
                        <td width="50%">@v.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@v.Id" asp-action="Edit" class="btn btn-primary" mx-2>
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@v.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                        @*                        <td>
                            <form method="post" action="~/ApplicationType/Delete">
                            <input type="hidden" value=@v.Id name="Id" />
                            <input type="hidden" value=@v.Name name="Name" />
                            <div class="far fa-trash-alt"><input type="submit" /></div>
                            </form>

                            </td>*@
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>There is no Application's</p>

    }
</div>

