@model Rocky.Models.ViewModels.HomeVM


<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var v in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@v.Name.Replace(' ','_')">
                @v.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach (var p in Model.Products)
        {
            <partial name="_IndividualProductCard" model="p" />
        }
    </div>
</div>
@section Scripts{


<script>
        $(document).ready(function()
        {
        $(".filter-button").click(function(){

            var value = $(this).attr('data-filter');
            if(value == "all")
            {
                $('.filter').show('1000');
            }
            else
            {
                $(".filter").not('.'+value).hide('3000');
                $('.filter').filter('.'+value).show('3000');

            }
        });

    });
</script>
}